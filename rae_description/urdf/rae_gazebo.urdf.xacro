    <link name="left_caster_wheel">
      <xacro:caster_wheels mass="0.008" r="0.005">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      </xacro:caster_wheels>
      <collision>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://rae_description/urdf/models/caster-wheel.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>

      <visual>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://rae_description/urdf/models/caster-wheel.stl" scale="1.0 1.0 1.0"/>
        </geometry>
        <material name="mat">
          <lighting>1</lighting>
          <color rgba="1.0 1.0 1.0 1.0"/>
          <shader type='pixel'/>
          <emissive>0 0 0 1</emissive>
        </material>
        <transparency>0</transparency>
        <cast_shadows>1</cast_shadows>
      
      </visual>
    </link>

    <joint name="base_left_caster_wheel" type="fixed">
        <parent link="base_frame"/>
        <child link="left_caster_wheel"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.0735 0.0445 -0.001" />
    </joint>

    <link name="right_caster_wheel">
      <xacro:caster_wheels mass="0.008" r="0.005">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      </xacro:caster_wheels>
      <collision>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://rae_description/urdf/models/caster-wheel.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>

      <visual>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://rae_description/urdf/models/caster-wheel.stl" scale="1.0 1.0 1.0"/>
        </geometry>
        <material name="mat">
          <lighting>1</lighting>
          <color rgba="1.0 1.0 1.0 1.0"/>
          <shader type='pixel'/>
          <emissive>0 0 0 1</emissive>
        </material>
        <transparency>0</transparency>
        <cast_shadows>1</cast_shadows>
      
      </visual>
    </link>

    <joint name="base_right_caster_wheel" type="fixed">
        <parent link="base_frame"/>
        <child link="right_caster_wheel"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.0735 -0.0445 -0.001" />
    </joint>
    <gazebo>
        <plugin
                filename="libignition-gazebo-diff-drive-system.so"
                name="ignition::gazebo::systems::DiffDrive">
                <frame_id>odom</frame_id>
                <child_frame_id>base_frame</child_frame_id>
                <tf_topic>tf</tf_topic>
                <publish_odom>true</publish_odom>
                <publish_odom_tf>true</publish_odom_tf>
                <publish_wheel_tf>true</publish_wheel_tf>
                <odom_topic>odom</odom_topic>
                <left_joint>left_wheel_hinge</left_joint>
                <right_joint>right_wheel_hinge</right_joint>
                <wheel_separation>0.0854</wheel_separation>
                <!-- check correct wheel radius when you come back to the task -->
                <wheel_radius>0.0119</wheel_radius>
                <odom_publish_frequency>50</odom_publish_frequency>
                <topic>cmd_vel</topic>
            </plugin>
       
    </gazebo>
    
    <link name="rgb_camera_link">
     <xacro:body mass="0.001" d="0.010" h="0.03" w="0.03">
          <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
     </xacro:body>
     <!-- <visual>
        <geometry>
            <box size="0.010 0.03 0.03"/>
