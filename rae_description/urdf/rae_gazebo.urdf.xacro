<?xml version="1.0"?>
<robot name="rae" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="inertial_moment_calc.xacro"/>

    <link name="base_frame">
     <xacro:body mass="0.00001" d="0.0000010" h="0.000003" w="0.00003">
          <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
     </xacro:body>
    </link>
    <gazebo reference="base_frame">
     <sensor name="imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>1</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
     </sensor>
    </gazebo>
    <link name="chassis">
      <xacro:body mass="0.360" d="0.125" h="0.028" w="0.1256">
          <origin xyz="0 0.014 0.0" rpy="0.0 0.0 0.0"/>
      </xacro:body>




      <collision>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://rae_description/urdf/models/RAE.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>

      <visual>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://rae_description/urdf/models/RAE.stl" scale="1.0 1.0 1.0"/>
        </geometry>
        <material name="mat">
          <lighting>1</lighting>
          <color rgba="0.1 0.1 0.1 1.0"/>
          <shader type='pixel'/>
          <emissive>0 0 0 1</emissive>
        </material>
        <transparency>0</transparency>
        <cast_shadows>1</cast_shadows>
      
      </visual>
    </link>
    <joint name="base_chassis_joint" type="fixed">
        <parent link="base_frame"/>
        <child link="chassis"/>
        <origin rpy="1.57 0.0 1.57" xyz="0.0307 0.0 0.0" />
    </joint>

